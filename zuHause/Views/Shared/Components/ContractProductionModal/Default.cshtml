                                        <label class="col-auto mb-0 px-0 py-1">備註一：</label>
                                        <div class="col gap-2 py-0">
                                            <div class="row align-items-start">
                                                <div class="col p-0">
                                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                                              style="resize: none; height: 4rem;"></textarea>
                                                </div>
                                                <small class="text-danger col-auto">限制內容為100字以內</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="row m-0 align-items-start">
                                        <label class="col-auto mb-0 px-0 py-1">備註二：</label>
                                        <div class="col gap-2 py-0">
                                            <div class="row align-items-start">
                                                <div class="col p-0">
                                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                                              style="resize: none; height: 4rem;"></textarea>
                                                </div>
                                                <small class="text-danger col-auto">限制內容為100字以內</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
