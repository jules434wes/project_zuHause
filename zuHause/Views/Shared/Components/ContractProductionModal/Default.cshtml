                                    <table class="table table-bordered border">
                                        <thead>
                                            <tr class="table-success">
                                                <th scope="col">項次</th>
                                                <th scope="col">家具名稱</th>
                                                <th scope="col">數量</th>
                                                <th scope="col">簽收前堪用狀況</th>
                                                <th scope="col">維修責任權責</th>
