@using zuHause.AdminViewModels
@{
    MemberData memberData = ViewData["MemberData"] as MemberData;
    if (memberData == null)
    {
        return;
    }
}

<!-- 頂部標題區 & 快速操作區 -->
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">
                    <i class="bi bi-person-circle me-2"></i>@memberData.MemberName
                    @if (memberData.IsLandlord)
                    {
                        <span class="badge bg-primary align-middle fs-6">已認證為房東</span>
                    }
                </h2>
                <p class="text-muted mb-1">會員ID: @memberData.MemberID</p>
                <p class="text-muted mb-0">註冊時間: @memberData.RegistrationDate</p>
            </div>
            <div class="text-end">
                <div class="mb-2">
                    @if (memberData.IsActive)
                    {
                        <span class="badge fs-6 text-bg-success">啟用</span>
                    }
                    else
                    {
                        <span class="badge fs-6 text-bg-danger">停用</span>
                    }
                    
                    @if (memberData.IsIdentityVerified)
                    {
                        <span class="badge fs-6 text-bg-primary">身分已驗證</span>
                    }
                    else
                    {
                        <span class="badge fs-6 text-bg-warning">未驗證</span>
                    }
                </div>
                <div>
                    @* @if (!memberData.IsIdentityVerified && memberData.HasPendingIdentityApplication)
                    {
                        <button class="btn btn-primary" onclick="openVerifyIdModal()">
                            <i class="bi bi-check2-circle me-1"></i> 手動驗證身分
                        </button>
                    } *@
                    
                    @if (memberData.IsActive)
                    {
                        <button class="btn btn-outline-danger" onclick="openDeactivateModal()">
                            <i class="bi bi-trash me-1"></i>停用帳號
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline-success" onclick="openActivateModal()">
                            <i class="bi bi-check-circle me-1"></i>啟用帳號
                        </button>
                    }
                    <button class="btn btn-outline-secondary" onclick="openSendMessageModal()">
                        <i class="bi bi-bell me-1"></i>發送系統訊息
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise me-1"></i>重設密碼
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>